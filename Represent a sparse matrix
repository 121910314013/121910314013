mat = [
    [0, 1, 0, 0, 4],
    [0, 0, 5, 7, 0],
    [0, 8, 0, 0, 0],
    [0, 2, 0, 0, 0]
]
k = 0
for i in range(len(mat)):
    for j in range(len(mat[0])):
        if mat[i][j] != 0:
            k += 1
smatrixx = []
for i in range(len(mat)):
    for j in range(len(mat[0])):
        if mat[i][j] != 0:
            temp = [i, j, mat[i][j]]
            smatrixx.append(temp)

print(smatrixx)


OUTPUT:
[[0, 1, 1], [0, 4, 4], [1, 2, 5], [1, 3, 7], [2, 1, 8], [3, 1, 2]]
